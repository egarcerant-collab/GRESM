rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // This allows the login page to show a dropdown of users.
      // WARNING: This makes all user data in this collection public to anyone who can query it.
      // For better security, user roles, signatures, and other sensitive data should be in a separate,
      // more restricted collection.
      allow list: if true;

      // Only the user themselves or an admin can read the full user profile.
      allow read: if isOwner(userId) || isAdmin();

      // Only the user themselves or an admin can update the user profile.
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /audits/{auditId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.auditorId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
  }
}
