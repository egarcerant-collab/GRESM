rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // More robust check: ensures the user document exists and has the admin role.
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // This allows the login page to show a dropdown of users.
      // WARNING: This makes ALL user data in this collection (including role and signature)
      // public to anyone who can query it. This is required for the login dropdown.
      // For better security, sensitive user data should be in a separate, more restricted collection.
      allow list, read: if true;

      // Write access is still restricted.
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /audits/{auditId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.auditorId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
  }
}
