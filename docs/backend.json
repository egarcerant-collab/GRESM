
{
  "entities": {
    "Audit": {
      "title": "Audit",
      "type": "object",
      "description": "Represents an audit record stored in Firestore.",
      "properties": {
        "id": { "type": "string" },
        "auditorName": { "type": "string" },
        "auditorId": { "type": "string" },
        "patientName": { "type": "string" },
        "documentType": { "type": "string" },
        "documentNumber": { "type": "string" },
        "event": { "type": "string" },
        "eventDetails": { "type": "string" },
        "followUpDate": { "type": "string", "format": "date-time" },
        "visitType": { "type": "string", "enum": ["PRIMERA VEZ", "Seguimiento", "CIERRE DE CASO"] },
        "department": { "type": "string" },
        "municipality": { "type": "string" },
        "ethnicity": { "type": "string" },
        "address": { "type": "string" },
        "phoneNumber": { "type": "string" },
        "followUpNotes": { "type": "string" },
        "nextSteps": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "birthDate": { "type": "string" },
        "age": { "type": "number" },
        "sex": { "type": "string" },
        "affiliationStatus": { "type": "string" },
        "area": { "type": "string" },
        "settlement": { "type": "string" },
        "nationality": { "type": "string" },
        "primaryHealthProvider": { "type": "string" },
        "regime": { "type": "string" },
        "upgdProvider": { "type": "string" },
        "followUpInterventionType": { "type": "string" }
      },
      "required": ["id", "auditorName", "patientName", "documentType", "documentNumber", "event", "followUpDate", "visitType", "department", "municipality", "ethnicity", "address", "phoneNumber", "followUpNotes", "nextSteps", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/audits/{auditId}": {
      "schema": { "$ref": "#/backend/entities/Audit" },
      "description": "Collection of all audit records."
    }
  }
}
